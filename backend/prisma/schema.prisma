generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String   @unique
  createdAt DateTime @default(now())

  files     File[]
}

model File {
  id        Int       @id @default(autoincrement())
  filename  String
  filepath  String
  mimetype  String
  size      Int
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])
  userId    Int
}
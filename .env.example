# MyOwnCloud Environment Configuration
# Copy this file to .env and configure your values

# ======================
# DATABASE CONFIGURATION
# ======================
DATABASE_URL=postgresql://myowncloud:myowncloud@postgres:5432/myowncloud

# For local development, use:
# DATABASE_URL=postgresql://myowncloud:myowncloud@localhost:5432/myowncloud

# ======================
# AUTHENTICATION
# ======================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-strong-random-string

# Token expiration (default: 7 days)
JWT_EXPIRES_IN=7d

# ======================
# AI CONFIGURATION
# ======================
# Groq API Key (get from https://console.groq.com)
GROQ_API_KEY=your-groq-api-key-here

# Preferred AI model (fallback chain will be used if not available)
GROQ_MODEL=llama3-70b-8192

# ======================
# FILE UPLOAD SETTINGS
# ======================
# Maximum file size (in bytes) - 100MB default
MAX_FILE_SIZE=104857600

# Upload directory (relative to backend root)
UPLOAD_PATH=./uploads

# Supported file types (comma-separated)
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,bmp,webp,txt,doc,docx

# ======================
# APPLICATION SETTINGS
# ======================
# Node environment
NODE_ENV=production

# Server port
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ======================
# SECURITY SETTINGS
# ======================
# Rate limiting (requests per minute per IP)
RATE_LIMIT=100

# Session timeout (minutes)
SESSION_TIMEOUT=60

# Enable HTTPS redirect (true/false)
FORCE_HTTPS=false

# ======================
# MONITORING & LOGGING
# ======================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging (true/false)
ENABLE_REQUEST_LOGS=true

# ======================
# DEVELOPMENT SETTINGS
# ======================
# Enable debug mode (true/false)
DEBUG=false

# Enable hot reload (true/false)
HOT_RELOAD=false

# ======================
# OPTIONAL SERVICES
# ======================
# Email service for notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379

# Webhook URL for notifications (optional)
# WEBHOOK_URL=https://your-webhook-url.com

# ======================
# DOCKER SETTINGS
# ======================
# These are used by docker-compose.yml
POSTGRES_USER=myowncloud
POSTGRES_PASSWORD=myowncloud
POSTGRES_DB=myowncloud

# ======================
# PRODUCTION OVERRIDES
# ======================
# Uncomment and modify for production deployment

# DATABASE_URL=postgresql://username:password@your-db-host:5432/myowncloud
# JWT_SECRET=your-production-jwt-secret-very-long-and-random
# GROQ_API_KEY=your-production-groq-api-key
# NODE_ENV=production
# FRONTEND_URL=https://your-domain.com
# FORCE_HTTPS=true
# LOG_LEVEL=warn
